{
  "scripts": {
    "start:popup": "parcel --dist-dir .dist/ src/popup/popup.html",
    "start:options": "parcel --dist-dir .dist/ src/options/options.html",
    "build": "npm run build:background && npm run build:popup && npm run build:options",
    "build:background": "parcel build src/background/service-worker.ts",
    "build:popup": "parcel build --public-url ./ --no-content-hash src/popup/popup.html",
    "build:options": "parcel build --public-url ./ --no-content-hash src/options/options.html",
    "build:release:clean": "rm -rf dist",
    "build:release:icons": "cp -r icons dist/",
    "build:release:manifest": "cp manifest.release.json dist/manifest.json",
    "build:release:schema": "cp schema.json dist/schema.json",
    "build:release:zip": "cd dist && zip ../extension.zip * icons/*",
    "build:release:copy": "mkdir -p ../backend/console/extension/chrome && cp extension.zip ../backend/console/extension/chrome/",
    "build:release": "npm run build:release:clean && npm run build && npm run build:release:icons && npm run build:release:manifest && npm run build:release:schema && npm run build:release:zip && npm run build:release:copy",
    "build:firefox:clean": "rm -rf dist",
    "build:firefox:icons": "cp -r icons dist/",
    "build:firefox:manifest": "cp manifest.firefox.json dist/manifest.json",
    "build:firefox:schema": "cp schema.json dist/schema.json",
    "build:firefox:zip": "cd dist && zip ../extension-firefox.zip * icons/*",
    "build:firefox:copy": "mkdir -p ../backend/console/extension/firefox && cp extension-firefox.zip ../backend/console/extension/firefox/extension.xpi",
    "build:firefox": "npm run build:firefox:clean && npm run build && npm run build:firefox:icons && npm run build:firefox:manifest && npm run build:firefox:schema && npm run build:firefox:zip && npm run build:firefox:copy",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "0.0.271",
    "@types/webextension-polyfill": "^0.12.4",
    "parcel": "2.16.0",
    "process": "0.11.10",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@bufbuild/connect": "0.13.0",
    "@bufbuild/connect-web": "0.13.0",
    "@bufbuild/protobuf": "1.10.1",
    "webextension-polyfill": "^0.12.0"
  }
}
