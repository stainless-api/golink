{
  "manifest_version": 3,
  "name": "Stainless golinks",
  "version": "0.0.1",

  "action": {
    "default_popup": "dist/popup.html"
  },
  "description": "Stainless internal URL shortener. Redirect go/* to registered URLs.",
  "icons": {},

  "author": {
    "email": "eric@stainless.com"
  },

  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },
  "host_permissions": ["http://go/*", "https://go/*"],
  "options_page": "dist/options.html",
  "permissions": ["declarativeNetRequest", "storage", "tabs"],
  "storage": {
    "managed_schema": "schema.json"
  }
}
